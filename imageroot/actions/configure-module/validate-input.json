{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure tailscale",
    "$id": "http://nethserver.org/json-schema/task/input/tailscale/configure-module",
    "description": "Configure tailscale",
    "examples": [
        {
            "server" : "https://headscale.domain.org",
            "host": "tailscale.domain.org",
            "enable_web_interface": false,
            "auth_key": "abcdefg"
        }
    ],
    "type": "object",
    "required": [
        "server",
        "host",
        "enable_web_interface"
    ],
    "properties": {
        "server": {
            "type": "string",
            "description": "Login Server URL"
        },
        "host": {
            "type": "string",
            "description": "Host name for the tailscale node",
            "format": "hostname"
        },
        "enable_web_interface": {
            "type": "boolean",
            "title": "Enable web interface",
            "description": "Enable the tailscale web interface"
        },
	"auth_key": {
            "type": "string",
            "description": "Host name for the application, like 'tailscale.domain.org'" 
        }
    }
}
